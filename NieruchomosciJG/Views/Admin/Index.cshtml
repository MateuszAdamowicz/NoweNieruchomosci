@using Models.ViewModels
@using PagedList.Mvc
@model Models.ViewModels.AdminIndexViewModel
@{
    Layout = "_AdminLayout.cshtml"; ;
}

<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<style type="text/css">
    .form-group {
        margin-right: 10px;
    }

    label {
        margin-right: 5px;
    }

    table {
        font-size: 14px;
    }

    .pagination {
        margin: 0px;
    }

    a {
        color: black;
        text-decoration: none !important;
    }

    .clickable {
        cursor: pointer;
    }

    .popover-content {
        padding-left: 0px;
        padding-top: 0px;
        padding-right: 0px;
        padding-bottom: 0px;
    }

    .popover {
        background-color: black;
    }

    .popover.left>.arrow:after {
        border-left-color: black;
    }
</style>

@{
    var changeAdvert = (ChangeAdvert)TempData["Change"];
}

<div class="row">
    <div class="col-md-12">
        <h3>Znajdź ofertę</h3>
        <hr />
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                {
                    <input type="hidden" name="Filter" id="Filter" value="true" />
                    <div class="form-inline">
                        <div class="form-group col-md-3" style="padding-left: 0px; margin-right: 10px; padding-right: 0px;">
                            @Html.Editor("Number", new { htmlAttributes = new { @class = "form-control find-input", @style = "width:100%", @placeholder = "Numer oferty", @id = "Number" } })
                        </div>
                        <div class="form-group">
                            <label>Typ oferty:</label>
                            @Html.DropDownList("ToLet", new SelectList(Model.AdminIndexFilterOptions.ToLet, "Value", "Text"), new { @class = "form-control find-input" })
                        </div>
                        <div class="form-group">
                            <label>Nieruchomość:</label>
                            @Html.DropDownList("AdType", new SelectList(Model.AdminIndexFilterOptions.AdTypes, "Value", "Text"), new { @class = "form-control find-input", @id = "AdType" })
                        </div>
                        <div class="form-group">
                            <div class="allOptions">
                                <label>Miejscowość:</label>
                                @Html.DropDownList("City", new SelectList(Model.AdminIndexFilterOptions.Cities, "Value", "Text"), new { @class = "form-control find-input" })
                            </div>
                        </div>
                    </div>

                    <div class="form-inline" style="margin-top: 20px">
                        <div class="form-group">
                            <label>Cena od:</label>
                            @Html.Editor("PriceFrom", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                        </div>
                        <div class="form-group">
                            <label>do:</label>
                            @Html.Editor("PriceTo", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                            <label>zł</label>
                        </div>
                        <div class="form-group">
                            <label>Metraż od:</label>
                            @Html.Editor("AreaFrom", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                        </div>
                        <div class="form-group">
                            <label>do:</label>
                            @Html.Editor("AreaTo", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                            <label>m<sup>2</sup></label>
                        </div>

                        <div class="form-group">
                            <label>Dodane od:</label>
                            <input type="date" name="DateFrom" class="form-control find-input" id="dateFrom" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" oninvalid="setCustomValidity('Wprowadź datę w formacie YYYY-MM-DD')" oninput="setCustomValidity('')" />
                        </div>
                        <div class="form-group">
                            <label>do:</label>
                            <input type="date" name="DateTo" class="form-control find-input" id="dateTo" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" oninvalid="setCustomValidity('Wprowadź datę w formacie YYYY-MM-DD')" oninput="setCustomValidity('')" />
                        </div>
                    </div>
                    <div class="form-inline" style="margin-top: 20px; text-align: left;">
                        <label>@Html.CheckBox("ShowHidden") Pokaż także zablokowane</label>
                        <div class="pull-right">
                            <button type="button" class="btn btn-default" id="ClearFilters">Wyczyść filtry</button>
                            <button class="btn btn-primary">Wyszukaj</button>
                        </div>
                    </div>
                    <input type="hidden" name="PerPage" value="@Model.AdminIndexFiltered.PerPage" />
                }
            </div>
        </div>
