                                    <input type="hidden" name="sortOption" value="@Model.AdminIndexFiltered.SortOption">
                                    
                                    <div class="form-inline">
                                        <label>Ofert na stronie:</label>
                                        @Html.DropDownList("PerPage", new SelectList(Model.AdminIndexFilterOptions.PerPage, "Value", "Text"), new { @class = "form-control find-input PerPage", @onchange = "this.form.submit()" })
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="modal" id="confirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header" style="border-bottom-width: 0px;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Usuwanie oferty</h4>
            </div>
            <div class="modal-body">
                Usunięcie oferty jest nieodwracalne.
                Czy jesteś pewien, że chcesz ją usunąć?
            </div>
            <div class="modal-footer" style="border-top-width: 0px;">
                <div class="col-md-6">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Rozmyśliłem się.</button>
                </div>
                <div class="col-md-6">
                    <a href="#" id="submit" class="btn btn-primary success">Tak, usuń</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(
        $('[data-toggle="popover"]').popover()
    );

    $('.submitdelete').on('click', function (e) {
        var $form = $(this).closest('form');
        e.preventDefault();
        $('#confirm').modal({ backdrop: 'static', keyboard: false })
            .one('click', '#submit', function () {
                $form.trigger('submit');
            });
    });

    $(function () {
        $('.submit').click(function () {
            var $form = $(this).closest('form');
            $form.trigger('submit');
        });
    });

    $("#ClearFilters").on("click", function () {
        $("#Number").val('');
        $("#AdType").val('');
        $("#ToLet").val('');
        $("#City").val('');
        $("#PriceFrom").val('');
        $("#PriceTo").val('');
        $("#AreaFrom").val('');
        $("#AreaTo").val('');
        $("#dateFrom").val('');
        $("#dateTo").val('');
        $("#ShowHidden").attr("checked", false);
    });

    $("#dateFrom").on("change", function () {
        var from = new Date($("#dateFrom").val());
        var to = new Date($("#dateTo").val());
        if (from > to) {
            alert("Data początkowa nie może być większa od końcowej!");
            $("#dateFrom").val("");
        }
    });

    $("#dateTo").on("change", function () {
        var from = new Date($("#dateFrom").val());
        var to = new Date($("#dateTo").val());
        if (from > to) {
            alert("Data początkowa nie może być większa od końcowej!");
            $("#dateTo").val("");
        }
    });

    $("#dateFrom").val("@Model.AdminIndexFiltered.DateFrom.GetValueOrDefault().ToShortDateString()");
    $("#dateTo").val("@Model.AdminIndexFiltered.DateTo.GetValueOrDefault().ToShortDateString()");

    if ($("#dateFrom").val() === "0001-01-01") {
        $("#dateFrom").val('');
    }

    if ($("#dateTo").val() === "0001-01-01") {
        $("#dateTo").val('');
    }
</script>
