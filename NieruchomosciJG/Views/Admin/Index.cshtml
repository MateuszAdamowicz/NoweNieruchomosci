                                       priceFrom = Model.AdminIndexFiltred.PriceFrom,
                                       priceTo = Model.AdminIndexFiltred.PriceTo,
                                       areaFrom = Model.AdminIndexFiltred.AreaFrom,
                                       areaTo = Model.AdminIndexFiltred.AreaTo,
                                       dateFrom = Model.AdminIndexFiltred.DateFrom,
