@using Models.ViewModels
@using PagedList.Mvc
@model Models.ViewModels.AdminIndexViewModel
@{
    Layout = "_AdminLayout.cshtml"; ;
}
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<style type="text/css">
    .form-group {
        margin-right: 10px;
    }

    label {
        margin-right: 5px;
    }

    table {
        font-size: 14px;
    }

    .pagination {
        margin: 0px;
    }

    a {
        color: black;
        text-decoration: none !important;
    }

        .clickable {
        cursor: pointer;
    }

    .popover-content {
    padding-left: 0px;
    padding-top: 0px;
    padding-right: 0px;
    padding-bottom: 0px;
    }

    .popover {
    background-color: black;
    }

    .popover.left>.arrow:after {
    border-left-color: black;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <h3>Znajdź ofertę</h3>
        <hr />
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                {
                    <input type="hidden" name="Filter" id="Filter" value="true" />
                    <div class="form-inline">
                        <div class="form-group col-md-3" style="padding-left: 0px; margin-right: 10px; padding-right: 0px;">
                            @Html.Editor("Number", new { htmlAttributes = new { @class = "form-control find-input", @style = "width:100%", @placeholder = "Numer oferty", @id = "Number" } })
                        </div>
                        <div class="form-group">
                            <label>Typ oferty:</label>
                            @Html.DropDownList("ToLet", new SelectList(Model.AdminIndexFilterOptions.ToLet, "Value", "Text"), new { @class = "form-control find-input" })
                        </div>
                        <div class="form-group">
                            <label>Nieruchomość:</label>
                            @Html.DropDownList("AdType", new SelectList(Model.AdminIndexFilterOptions.AdTypes, "Value", "Text"), new { @class = "form-control find-input", @id = "AdType" })
                        </div>
                        <div class="form-group">
                            <div class="allOptions">
                                <label>Miejscowość:</label>
                                @Html.DropDownList("City", new SelectList(Model.AdminIndexFilterOptions.Cities, "Value", "Text"), new { @class = "form-control find-input" })
                            </div>
                        </div>
                    </div>

                    <div class="form-inline" style="margin-top: 20px">
                        <div class="form-group">
                            <label>Cena od:</label>
                            @Html.Editor("PriceFrom", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                        </div>
                        <div class="form-group">
                            <label>do:</label>
                            @Html.Editor("PriceTo", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                            <label>zł</label>
                        </div>
                        <div class="form-group">
                            <label>Metraż od:</label>
                            @Html.Editor("AreaFrom", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                        </div>
                        <div class="form-group">
                            <label>do:</label>
                            @Html.Editor("AreaTo", new { htmlAttributes = new { @class = "form-control find-input-sm", @placeholder = "0" } })
                            <label>m<sup>2</sup></label>
                        </div>

                        <div class="form-group">
                            <label>Dodane od:</label>
                            <input type="date" name="DateFrom" class="form-control find-input" id="dateFrom" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" oninvalid="setCustomValidity('Wprowadź datę w formacie YYYY-MM-DD')" oninput="setCustomValidity('')" />
                        </div>
                        <div class="form-group">
                            <label>do:</label>
                            <input type="date" name="DateTo" class="form-control find-input" id="dateTo" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" oninvalid="setCustomValidity('Wprowadź datę w formacie YYYY-MM-DD')" oninput="setCustomValidity('')" />
                        </div>
                    </div>
                    <div class="form-inline" style="margin-top: 20px; text-align: left;">
                        <label>@Html.CheckBox("ShowHidden") Pokaż także zablokowane</label>
                        <div class="pull-right">
                            <button type="button" class="btn btn-default" id="ClearFilters">Wyczyść filtry</button>
                            <button class="btn btn-primary">Wyszukaj</button>
                        </div>
                    </div>
                    <input type="hidden" name="PerPage" value="@Model.AdminIndexFiltered.PerPage" />
                }
            </div>
        </div>
        
        @if (Model.AdminIndexFiltered.Filter != null && Model.AdminIndexFiltered.Filter == true && !Model.Adverts.Any())
        {
            <div class="row" style="margin-top: 60px;">
                <div class="col-md-12">
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>Brak ofert spełniających kryteria wyszukiwania!</strong>Spróbuj uogólnić kryteria wyszukiwania.
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <h3>Znalezione oferty (@Model.Adverts.TotalItemCount)</h3>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                @Html.PagedListPager(Model.Adverts, page => Url.Action("Index", Model.AdminIndexFiltered.GetValues(page)))
                            </div>
                            <div class="pull-left">
                                @using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                                {
                                    <div class="form-inline">
                                        <label>Ofert na stronie:</label>
                                        @Html.DropDownList("PerPage", new SelectList(Model.AdminIndexFilterOptions.PerPage, "Value", "Text"), new { @class = "form-control find-input PerPage", @onchange = "this.form.submit()" })
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped" style="width: 100%">
                        <thead>
                            <tr style="text-align: left; font-weight: bold;">
                                <th>Zdjęcie</th>
                                <th>
                                    @Html.ActionLink("Dodane", "Index", new
                                   {
                                       page = Model.AdminIndexFiltered.Page,
                                       number = Model.AdminIndexFiltered.Number,
                                       toLet = Model.AdminIndexFiltered.ToLet,
                                       adType = Model.AdminIndexFiltered.AdType,
                                       city = Model.AdminIndexFiltered.City,
                                       priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                       priceTo = Model.AdminIndexFiltered.PriceTo,
                                       areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                       areaTo = Model.AdminIndexFiltered.AreaTo,
                                       dateFrom = Model.AdminIndexFiltered.DateFrom,
                                       dateTo = Model.AdminIndexFiltered.DateTo,
                                       filter = Model.AdminIndexFiltered.Filter,
                                       showHidden = Model.AdminIndexFiltered.ShowHidden,
                                       perPage = Model.AdminIndexFiltered.PerPage,
                                       sortOption = AdminSortOption.CreatedAt,
                                       sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                   })
                                    @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.CreatedAt && Model.AdminIndexFiltered.SortDescAsc == true)
                                    {
                                        <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                    }
                                    else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.CreatedAt && Model.AdminIndexFiltered.SortDescAsc == false)
                                    {
                                        <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                    }
                                </th>
                                <th>
                                    @Html.ActionLink("Nr oferty", "Index", new
                                   {
                                       page = Model.AdminIndexFiltered.Page,
                                       number = Model.AdminIndexFiltered.Number,
                                       toLet = Model.AdminIndexFiltered.ToLet,
                                       adType = Model.AdminIndexFiltered.AdType,
                                       city = Model.AdminIndexFiltered.City,
                                       priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                       priceTo = Model.AdminIndexFiltered.PriceTo,
                                       areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                       areaTo = Model.AdminIndexFiltered.AreaTo,
                                       dateFrom = Model.AdminIndexFiltered.DateFrom,
                                       dateTo = Model.AdminIndexFiltered.DateTo,
                                       filter = Model.AdminIndexFiltered.Filter,
                                       showHidden = Model.AdminIndexFiltered.ShowHidden,
                                       perPage = Model.AdminIndexFiltered.PerPage,
                                       sortOption = AdminSortOption.Number,
                                       sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                   })
                                    @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Number && Model.AdminIndexFiltered.SortDescAsc == true)
                                    {
                                        <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                    }
                                    else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Number && Model.AdminIndexFiltered.SortDescAsc == false)
                                    {
                                        <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                    }
                                </th>
                                <th>
                                    @Html.ActionLink("Miejscowość", "Index", new
                                   {
                                       page = Model.AdminIndexFiltered.Page,
                                       number = Model.AdminIndexFiltered.Number,
                                       toLet = Model.AdminIndexFiltered.ToLet,
                                       adType = Model.AdminIndexFiltered.AdType,
                                       city = Model.AdminIndexFiltered.City,
                                       priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                       priceTo = Model.AdminIndexFiltered.PriceTo,
                                       areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                       areaTo = Model.AdminIndexFiltered.AreaTo,
                                       dateFrom = Model.AdminIndexFiltered.DateFrom,
                                       dateTo = Model.AdminIndexFiltered.DateTo,
                                       filter = Model.AdminIndexFiltered.Filter,
                                       showHidden = Model.AdminIndexFiltered.ShowHidden,
                                       perPage = Model.AdminIndexFiltered.PerPage,
                                       sortOption = AdminSortOption.City,
                                       sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                   })
                                    @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.City && Model.AdminIndexFiltered.SortDescAsc == true)
                                    {
                                        <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                    }
                                    else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.City && Model.AdminIndexFiltered.SortDescAsc == false)
                                    {
                                        <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                    }
                                </th>
                                <th>
                                    @Html.ActionLink("Nieruchomość", "Index", new
                                   {
                                       page = Model.AdminIndexFiltered.Page,
                                       number = Model.AdminIndexFiltered.Number,
                                       toLet = Model.AdminIndexFiltered.ToLet,
                                       adType = Model.AdminIndexFiltered.AdType,
                                       city = Model.AdminIndexFiltered.City,
                                       priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                       priceTo = Model.AdminIndexFiltered.PriceTo,
                                       areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                       areaTo = Model.AdminIndexFiltered.AreaTo,
                                       dateFrom = Model.AdminIndexFiltered.DateFrom,
                                       dateTo = Model.AdminIndexFiltered.DateTo,
                                       filter = Model.AdminIndexFiltered.Filter,
                                       showHidden = Model.AdminIndexFiltered.ShowHidden,
                                       perPage = Model.AdminIndexFiltered.PerPage,
                                       sortOption = AdminSortOption.AdType,
                                       sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                   })
                                    @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.AdType && Model.AdminIndexFiltered.SortDescAsc == true)
                                    {
                                        <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                    }
                                    else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.AdType && Model.AdminIndexFiltered.SortDescAsc == false)
                                    {
                                        <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                    }
                                </th>
                                <th>
                                    @Html.ActionLink("Typ oferty", "Index", new
                                   {
                                       page = Model.AdminIndexFiltered.Page,
                                       number = Model.AdminIndexFiltered.Number,
                                       toLet = Model.AdminIndexFiltered.ToLet,
                                       adType = Model.AdminIndexFiltered.AdType,
                                       city = Model.AdminIndexFiltered.City,
                                       priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                       priceTo = Model.AdminIndexFiltered.PriceTo,
                                       areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                       areaTo = Model.AdminIndexFiltered.AreaTo,
                                       dateFrom = Model.AdminIndexFiltered.DateFrom,
                                       dateTo = Model.AdminIndexFiltered.DateTo,
                                       filter = Model.AdminIndexFiltered.Filter,
                                       showHidden = Model.AdminIndexFiltered.ShowHidden,
                                       perPage = Model.AdminIndexFiltered.PerPage,
                                       sortOption = AdminSortOption.ToLet,
                                       sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                   })
                                    @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.ToLet && Model.AdminIndexFiltered.SortDescAsc == true)
                                    {
                                        <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                    }
                                    else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.ToLet && Model.AdminIndexFiltered.SortDescAsc == false)
                                    {
                                        <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                    }
                                </th>
                                <th>
                                    @Html.ActionLink("Cena", "Index", new
                                   {
                                       page = Model.AdminIndexFiltered.Page,
                                       number = Model.AdminIndexFiltered.Number,
                                       toLet = Model.AdminIndexFiltered.ToLet,
                                       adType = Model.AdminIndexFiltered.AdType,
                                       city = Model.AdminIndexFiltered.City,
                                       priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                       priceTo = Model.AdminIndexFiltered.PriceTo,
                                       areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                       areaTo = Model.AdminIndexFiltered.AreaTo,
                                       dateFrom = Model.AdminIndexFiltered.DateFrom,
                                       dateTo = Model.AdminIndexFiltered.DateTo,
                                       filter = Model.AdminIndexFiltered.Filter,
                                       showHidden = Model.AdminIndexFiltered.ShowHidden,
                                       perPage = Model.AdminIndexFiltered.PerPage,
                                       sortOption = AdminSortOption.Price,
                                       sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                   })
                                    @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Price && Model.AdminIndexFiltered.SortDescAsc == true)
                                    {
                                        <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                    }
                                    else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Price && Model.AdminIndexFiltered.SortDescAsc == false)
                                    {
                                        <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                    }
                                </th>
                                <th>
                                    @Html.ActionLink("Metraż", "Index", new
                                   {
                                       page = Model.AdminIndexFiltered.Page,
                                       number = Model.AdminIndexFiltered.Number,
                                       toLet = Model.AdminIndexFiltered.ToLet,
                                       adType = Model.AdminIndexFiltered.AdType,
                                       city = Model.AdminIndexFiltered.City,
                                       priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                       priceTo = Model.AdminIndexFiltered.PriceTo,
                                       areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                       areaTo = Model.AdminIndexFiltered.AreaTo,
                                       dateFrom = Model.AdminIndexFiltered.DateFrom,
                                       dateTo = Model.AdminIndexFiltered.DateTo,
                                       filter = Model.AdminIndexFiltered.Filter,
                                       showHidden = Model.AdminIndexFiltered.ShowHidden,
                                       perPage = Model.AdminIndexFiltered.PerPage,
                                       sortOption = AdminSortOption.Area,
                                       sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                   })
                                    @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Area && Model.AdminIndexFiltered.SortDescAsc == true)
                                    {
                                        <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                    }
                                    else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Area && Model.AdminIndexFiltered.SortDescAsc == false)
                                    {
                                        <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                    }
                                </th>

                                @if (Model.AdminIndexFiltered.ShowHidden == true)
                                {
                                    <th>
                                        @Html.ActionLink("Status", "Index", new
                                        {
                                            page = Model.AdminIndexFiltered.Page,
                                            number = Model.AdminIndexFiltered.Number,
                                            toLet = Model.AdminIndexFiltered.ToLet,
                                            adType = Model.AdminIndexFiltered.AdType,
                                            city = Model.AdminIndexFiltered.City,
                                            priceFrom = Model.AdminIndexFiltered.PriceFrom,
                                            priceTo = Model.AdminIndexFiltered.PriceTo,
                                            areaFrom = Model.AdminIndexFiltered.AreaFrom,
                                            areaTo = Model.AdminIndexFiltered.AreaTo,
                                            dateFrom = Model.AdminIndexFiltered.DateFrom,
                                            dateTo = Model.AdminIndexFiltered.DateTo,
                                            filter = Model.AdminIndexFiltered.Filter,
                                            showHidden = Model.AdminIndexFiltered.ShowHidden,
                                            perPage = Model.AdminIndexFiltered.PerPage,
                                            sortOption = AdminSortOption.Visible,
                                            sortDescAsc = !Model.AdminIndexFiltered.SortDescAsc
                                        })
                                        @if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Visible && Model.AdminIndexFiltered.SortDescAsc == true)
                                        {
                                            <span class="glyphicon glyphicon-chevron-down" style="width: 20px"></span>
                                        }
                                        else if (Model.AdminIndexFiltered.SortOption == AdminSortOption.Visible && Model.AdminIndexFiltered.SortDescAsc == false)
                                        {
                                            <span class="glyphicon glyphicon-chevron-up" style="width: 20px"></span>
                                        }
                                    </th>
                                }
                                else
                                {  
                                    <th>Status</th>
                                }

                                <th style="text-align: center">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var advert in Model.Adverts)
                            {
                                <tr>
                                    <td>
                                        @if (advert.GetPhotoPath != "")
                                        {
                                            <div class="col-md-12" style="padding-left: 0px; padding-right: 0px;">
                                                <a tabindex="0"  style="font-size: 1.5em" data-placement="left" data-toggle="popover" data-trigger="hover" data-html="true" data-content='<img src="@advert.GetPhotoPath" style="border-radius: 6px;" />'>
                                                    <img src="@advert.GetPhotoPath" style="max-height:36px;  max-width:48px; cursor: pointer;"/></a>
                                            </div>
                                        }
                                    </td>
                                    <td>@advert.CreatedAt.ToShortDateString()</td>
                                    <td><a href="/Home/Show?key=@advert.Number">@advert.Number</a>
                                    </td>
                                    <td>@advert.City</td>
                                    <td>@advert.AdType.Name</td>
                                    <td>
                                        @if (@advert.ToLet)
                                        {
                                            <div style="padding-top: 4px">
                                                <span class="label label-primary">Wynajem</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div style="padding-top: 4px">
                                                <span class="label label-warning">Sprzedaż</span>
                                            </div>
                                        }
                                    </td>
                                    <td><span class="pln">@advert.Price</span> zł</td>
                                    <td>@advert.Area m<sup>2</sup></td>
                                    <td>
                                        @if (!advert.Visible)
                                        {
                                            <span class="label label-danger">Blokada</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-4" style="text-align: center">
                                                @using (Html.BeginForm("ChangeAd", "Admin", FormMethod.Post))
                                                {
                                                    @Html.AntiForgeryToken();
                                                    <input type="hidden" name="numbers" value="@advert.Number"> 
                                                    <input type="hidden" name="delete" value="false">    
                                                    
                                                                            if (advert.Visible)
                                                                            {
                                                    <a class="submit"><span class="fa fa-lock clickable" style="font-size: 1.5em"></span></a>

                                                                            }
                                                                            else
                                                                            {
                                                    <a class="submit"><span class="fa fa-unlock-alt clickable" style="font-size: 1.5em"></span></a>
                                                                            }
                                                }
                                            </div>
                                            <div class="col-md-4" style="text-align: center">
                                                @using (Html.BeginForm("EditAd", "Admin", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="id" value="@advert.Id"> 
                                                    <input type="hidden" name="AdType" value="@advert.AdType">                                                      
                                                    <a class="submit"><span class="glyphicon glyphicon-pencil clickable" style="font-size: 1.5em"></span></a>
                                                }
                                            </div>
                                            <div class="col-md-4" style="text-align: center">
                                                @using (Html.BeginForm("ChangeAd", "Admin", FormMethod.Post))
                                                {
                                                    @Html.AntiForgeryToken();  
                                                    <input type="hidden" name="numbers" value="@advert.Number"> 
                                                    <input type="hidden" name="delete" value="true">                                                    
                                                    
                                                    <a class="submitdelete"><span class="glyphicon glyphicon-trash clickable" style="font-size: 1.5em"></span></a>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                @Html.PagedListPager(Model.Adverts, page => Url.Action("Index", Model.AdminIndexFiltered.GetValues(page)))
                            </div>
                            <div class="pull-left">
                                @using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                                {
                                    <div class="form-inline">
                                        <label>Ofert na stronie:</label>
                                        @Html.DropDownList("PerPage", new SelectList(Model.AdminIndexFilterOptions.PerPage, "Value", "Text"), new { @class = "form-control find-input PerPage", @onchange = "this.form.submit()" })
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(
        $('[data-toggle="popover"]').popover()
    );

    $("#ClearFilters").on("click", function () {
        $("#Number").val('');
        $("#AdType").val('All');
        $("#ToLet").val('');
        $("#FlatCity").val('');
        $("#HouseCity").val('');
        $("#LandCity").val('');
        $("#AllCity").val('');
        $("#PriceFrom").val('');
        $("#PriceTo").val('');
        $("#AreaFrom").val('');
        $("#AreaTo").val('');
        $("#dateFrom").val("2014-01-01");
        $("#dateTo").val(year + "-" + month + "-" + day);
        $("#ShowHidden").attr("checked", false);
    });
</script>
