﻿@model Models.ViewModels.ContactEmailViewModel
@{
    ViewBag.Title = "Skontaktuj się z nami";
}
<div class="col-md-12">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-3 short-advert-label">
                        Skontaktuj się z nami
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-12 short-advert-body">
                        <div class="row">
                            <div class="col-md-8" style="margin-top: 15px;">
                                <p style="font-size:14px">
                                    @{Html.RenderPartial("Texts/_ContactText");}
                                </p>
                            </div>
                            <div class="col-md-4">
                                <div class="col-md-12" style="background-color: rgb(182, 28, 28); padding-top: 10px; padding-bottom: 10px;border-radius: 10px;">
                                    <b>Nieruchomości Jeleniogórskie</b><br />
                                    ul. Podwale 22 a/1 <br />
                                    58-500 Jelenia Góra <br />
                                    tel. 570 170 007
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm("Contact", "Home"))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row" style="font-size: large;">
                                        <div class="col-md-12">
                                            <span class="glyphicon glyphicon-user" style="margin-right: 10px;"></span>
                                            <b>Dane personalne</b>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">@Html.ValidationMessageFor(x => x.FullName, "", new { @class = "error-feedback" })</div>
                                        <div class="col-md-4">@Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "error-feedback" })</div>
                                        <div class="col-md-4">@Html.ValidationMessageFor(x => x.Email, "", new { @class = "error-feedback" })</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">@Html.TextBoxFor(x => x.FullName, new { @class = "form-control menu-item-input", @placeholder = "Twoje imię i nazwisko" })</div>
                                        <div class="col-md-4">@Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control menu-item-input", @placeholder = "Twój numer telefonu (opcjonalne)" })</div>
                                        <div class="col-md-4">@Html.TextBoxFor(x => x.Email, new { @class = "form-control menu-item-input", @placeholder = "Twój adres e-mail" })</div>
                                    </div>

                                    <div class="row" style="font-size: large; margin-top: 10px">
                                        <div class="col-md-12">
                                            <span class="glyphicon glyphicon-edit" style="margin-right: 10px;"></span>
                                            <b>Treść wiadomości</b>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4"></div>
                                        <div class="col-md-8">@Html.ValidationMessageFor(x => x.Body, "", new { @class = "error-feedback" })</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <button type="submit" class="menu-item-button" style="width: 100%; height: 40px; background-color: #B71C1C">Wyślij zapytanie</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-8">@Html.TextAreaFor(x => x.Body, new { @class = "form-control menu-item-input", @style = "height:100px; width:100%; max-width:none", @placeholder = "Napisz czego szukasz" })</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>